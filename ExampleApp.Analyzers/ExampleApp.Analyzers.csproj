<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <!-- Target -->
	  <TargetFramework>netstandard2.0</TargetFramework>

	  <!-- Analyzer identity -->
	  <IsRoslynAnalyzer>true</IsRoslynAnalyzer>

	  <!-- Quality rules for analyzer authors -->
	  <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>

	  <!-- NuGet metadata -->
	  <PackageId>ExampleApp.Analyzers</PackageId>
	  <Version>1.0.0</Version>
	  <Authors>YourOrg</Authors>
	  <Company>YourOrg</Company>
	  <Description>Architectural analyzers enforcing CSLA boundaries</Description>
	  <PackageTags>roslyn;analyzer;csla;architecture</PackageTags>

	  <!-- Important: analyzers are not libraries -->
	  <IncludeBuildOutput>false</IncludeBuildOutput>
  </PropertyGroup>

  <ItemGroup>
	  <!-- Core Roslyn APIs (safe) -->
	  <PackageReference Include="Microsoft.CodeAnalysis" Version="5.0.0" />

	  <!-- Analyzer authoring rules -->
	  <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.11.0">
		  <PrivateAssets>all</PrivateAssets>
	  </PackageReference>
  </ItemGroup>

</Project>
